@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@500;600;700;800&display=swap');

:root {
  /* Primary Colors - Warm Travel Theme */
  --brand: #FF6B35;
  --brand-dark: #E85A2A;
  --brand-light: #FF8C61;
  --brand-soft: #FFF4F0;

  /* Secondary Colors */
  --secondary: #4ECDC4;
  --secondary-dark: #3DB8AF;
  --accent: #FFD93D;
  --accent-dark: #FFC107;

  /* Neutral Colors */
  --text: #2C3E50;
  --text-light: #546E7A;
  --muted: #78909C;
  --bg: #FAFBFC;
  --card: #FFFFFF;
  --border: #E8EDF2;
  --border-strong: #CFD8DC;

  /* Status Colors */
  --danger: #E74C3C;
  --success: #27AE60;
  --warning: #F39C12;
  --info: #3498DB;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.7;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

img {
  max-width: 100%;
  height: auto;
  border-radius: 1rem;
  display: block;
}

a {
  color: var(--brand-dark);
  text-decoration: none;
}

a:hover {
  color: var(--brand);
}

body {
  margin: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.7;
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Playfair Display', Georgia, serif;
  font-weight: 700;
  line-height: 1.3;
  color: var(--text);
  margin-top: 0;
}

h1 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 800;
  letter-spacing: -0.02em;
}

h2 {
  font-size: clamp(1.75rem, 4vw, 2.75rem);
  font-weight: 700;
}

h3 {
  font-size: clamp(1.5rem, 3vw, 2.25rem);
  font-weight: 700;
}

h4 {
  font-size: clamp(1.25rem, 2.5vw, 1.75rem);
  font-weight: 600;
}

p {
  margin-top: 0;
  margin-bottom: 1rem;
}


input,
select,
textarea {
  width: 100%;
  padding: 0.75rem 0.9rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border);
  background: #fff;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

input::placeholder {
  color: #94a3b8;
  opacity: 1;
}

select option[disabled][selected] {
  color: #94a3b8;
}

input:focus,
select:focus,
textarea:focus {
  outline: none;
  border-color: var(--brand);
  box-shadow: 0 0 0 3px var(--brand-soft);
}

textarea {
  min-height: 140px;
  resize: vertical;
}

.container {
  width: min(1120px, calc(100% - 32px));
  margin: 0 auto;
}

main {
  min-height: 60vh;
}

section+section {
  margin-top: 3rem;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  border-radius: 50px;
  padding: 0.875rem 2rem;
  font-weight: 600;
  font-size: 0.95rem;
  border: none;
  cursor: pointer;
  background: linear-gradient(135deg, var(--brand) 0%, var(--brand-dark) 100%);
  color: #fff;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 12px rgba(255, 107, 53, 0.25);
  letter-spacing: 0.02em;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 53, 0.35);
  background: linear-gradient(135deg, var(--brand-light) 0%, var(--brand) 100%);
  color: #fff;
}

.btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(255, 107, 53, 0.25);
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  box-shadow: none;
  transform: none;
}

.btn-ghost {
  background: transparent;
  color: var(--brand);
  border: 2px solid var(--brand);
  box-shadow: none;
}

.btn-ghost:hover {
  background: var(--brand);
  color: #fff;
  border-color: var(--brand);
  box-shadow: 0 4px 12px rgba(255, 107, 53, 0.25);
}

.btn-secondary {
  background: linear-gradient(135deg, var(--secondary) 0%, var(--secondary-dark) 100%);
  box-shadow: 0 4px 12px rgba(78, 205, 196, 0.25);
}

.btn-secondary:hover {
  box-shadow: 0 8px 20px rgba(78, 205, 196, 0.35);
}

.btn-link {
  background: transparent;
  border: none;
  color: var(--brand-dark);
  padding: 0;
}

.btn-compact {
  padding: 0.4rem 1rem;
  font-size: 0.9rem;
}

.btn.w-100 {
  width: 100%;
}

.link-muted {
  color: var(--muted);
}

.top-bar {
  background: #f8fafc;
  border-bottom: 1px solid var(--border);
  font-size: 0.9rem;
}

.top-bar__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  flex-wrap: wrap;
  padding: 0.75rem 0;
}

.top-bar__links {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  flex-wrap: wrap;
}

.nav-bar {
  background: #fff;
  border-bottom: 1px solid var(--border);
  position: sticky;
  top: 0;
  z-index: 50;
}

.nav-bar__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  padding: 1rem 0;
}

.brand {
  font-size: 1.5rem;
  font-weight: 800;
  font-family: 'Playfair Display', Georgia, serif;
  color: var(--brand);
  letter-spacing: -0.01em;
}

.nav-search {
  position: relative;
  width: 300px;
}

.nav-search input {
  padding-right: 2.5rem;
}

.nav-search button {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 2.5rem;
  background: transparent;
  border: none;
  cursor: pointer;
  color: var(--muted);
  font-size: 1.1rem;
}

.nav-toggle {
  display: none;
  flex-direction: column;
  gap: 0.2rem;
  background: transparent;
  border: none;
  cursor: pointer;
}

.nav-toggle span {
  width: 24px;
  height: 3px;
  background: var(--text);
  border-radius: 999px;
}

.site-nav {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.site-nav a {
  padding: 0.5rem 1rem;
  border-radius: 50px;
  font-weight: 600;
  font-size: 0.95rem;
  color: var(--text-light);
  transition: all 0.3s ease;
}

.site-nav a.is-active,
.site-nav a:hover {
  color: var(--brand);
  background: var(--brand-soft);
  transform: translateY(-1px);
}

.hero {
  background-color: transparent;
  background-image: url('../../admin/images/nentour.jpg');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  padding: 6rem 0 5rem;
  color: #fff;
  position: relative;
}

.hero .container {
  position: relative;
  z-index: 1;
}

.hero__grid {
  display: grid;
  gap: 2.5rem;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  align-items: center;
}

.hero__content h1 {
  font-size: clamp(2.5rem, 6vw, 4rem);
  margin-bottom: 1.5rem;
  text-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

.hero__cta {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  margin-top: 1.5rem;
}

.hero__card {
  background: #fff;
  padding: 2rem;
  border-radius: 1.5rem;
  box-shadow: 0 20px 60px rgba(15, 23, 42, 0.08);
  border: 1px solid var(--border);
}

.section {
  padding: 0 0 0;
}

.section__header {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.section__header h2 {
  margin: 0;
}

.features-grid,
.tour-grid,
.stats-grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.feature-card,
.stat-card,
.tour-card,
.card {
  background: var(--card);
  border-radius: 1.5rem;
  padding: 1.75rem;
  border: 1px solid var(--border);
  box-shadow: 0 8px 24px rgba(44, 62, 80, 0.08);
  transition: all 0.3s ease;
}

.feature-card:hover,
.stat-card:hover,
.card:hover {
  box-shadow: 0 12px 32px rgba(44, 62, 80, 0.12);
  transform: translateY(-2px);
}

.feature-card h4 {
  margin: 0 0 0.5rem;
}

.stat-card h3 {
  margin: 0;
  font-size: 2rem;
}

.tour-card img {
  border-radius: 1rem;
  margin-bottom: 1rem;
  height: 200px;
  object-fit: cover;
}

.tour-card h4 {
  margin: 0 0 0.5rem;
}

.tour-card__meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
  margin-bottom: 0.75rem;
  color: var(--muted);
  font-size: 0.9rem;
}

.tour-card__footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 1rem;
}

.price {
  font-weight: 800;
  font-size: 1.35rem;
  color: var(--brand);
  font-family: 'Playfair Display', Georgia, serif;
}

.page {
  padding: 2.5rem 0 3.5rem;
}

.page-head {
  margin-bottom: 2rem;
}

.page-head h1,
.page-head h2,
.page-head h3 {
  margin: 0 0 0.5rem;
}

.card+.card {
  margin-top: 1.5rem;
}

.form-grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.form-group label {
  font-size: 0.9rem;
  font-weight: 600;
  display: block;
  margin-bottom: 0.25rem;
}

.form-stack .form-group {
  margin-bottom: 1rem;
}

.alert {
  padding: 0.9rem 1.1rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border);
  background: #fff;
  margin-bottom: 1.5rem;
}

.alert.success {
  border-color: var(--success);
  background: #ecfdf5;
  color: var(--success);
}

.alert.error {
  border-color: var(--danger);
  background: #fef2f2;
  color: var(--danger);
}

.table-responsive {
  overflow-x: auto;
}

.table {
  width: 100%;
  border-collapse: collapse;
  background: #fff;
  border-radius: 1rem;
  overflow: hidden;
}

.table th,
.table td {
  padding: 0.9rem 1rem;
  border-bottom: 1px solid var(--border);
  text-align: left;
}

.table th {
  background: #f8fafc;
  font-weight: 600;
}

.table tr:last-child td {
  border-bottom: none;
}

.status-chip {
  display: inline-flex;
  align-items: center;
  padding: 0.35rem 1rem;
  border-radius: 50px;
  font-size: 0.85rem;
  font-weight: 700;
  letter-spacing: 0.02em;
}

.status-chip.is-pending {
  background: linear-gradient(135deg, #FFF4E6, #FFE8CC);
  color: var(--warning);
  border: 1px solid rgba(243, 156, 18, 0.2);
}

.status-chip.is-approved {
  background: linear-gradient(135deg, #E8F8F5, #D5F5E3);
  color: var(--success);
  border: 1px solid rgba(39, 174, 96, 0.2);
}

.status-chip.is-cancelled {
  background: linear-gradient(135deg, #FADBD8, #F5B7B1);
  color: var(--danger);
  border: 1px solid rgba(231, 76, 60, 0.2);
}

.cta {
  background: linear-gradient(135deg, var(--brand-dark) 0%, var(--brand) 100%);
  color: #fff;
  padding: 4rem 0;
  margin-top: 4rem;
  position: relative;
  overflow: hidden;
}

.cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="white" opacity="0.1"/></svg>');
  opacity: 0.3;
}

.cta__content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 1.5rem;
}

.cta .btn-ghost {
  color: #fff;
  border-color: rgba(255, 255, 255, 0.6);
}

.site-footer {
  margin-top: 4rem;
  background: linear-gradient(180deg, #2C3E50 0%, #1A252F 100%);
  color: #ECF0F1;
  padding: 4rem 0 2rem;
  border-top: 4px solid var(--brand);
}

.site-footer__grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.site-footer h4,
.site-footer h5 {
  margin-top: 0;
  color: #fff;
}

.site-footer a {
  color: #e2e8f0;
}

.newsletter-form {
  display: flex;
  margin-top: 1rem;
}

.newsletter-form input {
  flex-grow: 1;
  border-radius: 999px 0 0 999px;
  border-right: none;
}

.newsletter-form button {
  border-radius: 0 999px 999px 0;
  background: var(--brand);
  color: #fff;
  border: none;
  padding: 0 1.5rem;
  cursor: pointer;
}

.site-footer__bottom {
  margin-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1.5rem;
  font-size: 0.9rem;
}

.modal {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.65);
  display: none;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  z-index: 1000;
}

.modal.is-visible {
  display: flex;
}

.modal__dialog {
  background: #fff;
  border-radius: 1.25rem;
  padding: 2rem;
  width: min(480px, 100%);
  position: relative;
  box-shadow: 0 25px 60px rgba(15, 23, 42, 0.2);
}

.modal__close {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background: transparent;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--muted);
}

.modal h3 {
  margin-top: 0;
}

.helper-text {
  font-size: 0.85rem;
  color: var(--muted);
  margin-top: 0.3rem;
}

.empty-state {
  text-align: center;
  padding: 2rem;
  border: 1px dashed var(--border);
  border-radius: 1rem;
  background: #fff;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.35rem 0.9rem;
  border-radius: 50px;
  font-size: 0.8rem;
  background: linear-gradient(135deg, var(--brand-soft), #FFE8DC);
  color: var(--brand-dark);
  font-weight: 700;
  letter-spacing: 0.02em;
  border: 1px solid rgba(255, 107, 53, 0.2);
}

.grid-two {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.5rem;
}

.summary-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 0.6rem;
}

.summary-list li {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px dashed var(--border);
  padding-bottom: 0.4rem;
}

@media (max-width: 768px) {
  .nav-toggle {
    display: flex;
  }

  .site-nav {
    display: none;
    flex-direction: column;
    width: 100%;
    padding-top: 1rem;
  }

  .site-nav.is-open {
    display: flex;
  }

  .nav-search {
    display: none;
    width: 100%;
    margin-top: 1rem;
  }

  .nav-search.is-open {
    display: block;
  }

  .nav-bar__content {
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .cta__content {
    flex-direction: column;
    align-items: flex-start;
  }
}